{
  "manifest_version": 2,
  "name": "poplar-task",
  "version": "1.0.0",
  "description": "Your task dispatcher for Chrome",
  "icons":
  {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "background":
  {
    "page": "pages/background.html"
  },
  "browser_action":
  {
    "default_icon": "img/icon.png",
    "default_title": "Your task dispatcher for Chrome",
    "default_popup": "pages/popup.html"
  },
  "permissions":
  [
    "tabs",
    "notifications",
    "webRequest",
    "storage"
  ],
  "homepage_url": "https://github.com/poplar89/chrome-poplar-task",
  "options_ui":
  {
    "page": "pages/options.html",
    "chrome_style": true
  },
  "omnibox": { "keyword" : "task" },
  "devtools_page": "pages/devtools.html"
}